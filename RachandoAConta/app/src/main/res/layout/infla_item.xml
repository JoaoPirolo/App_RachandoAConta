<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/realtivoID"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/buttonMenos"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/buttonMais"
        android:layout_alignBottom="@+id/buttonMais"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp" />

    <Button
        android:id="@+id/buttonMais"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="121dp"
        android:text="+"
        android:textSize="24sp"
        android:layout_marginEnd="11dp"
        android:layout_alignBaseline="@+id/textViewValorItem"
        android:layout_alignBottom="@+id/textViewValorItem"
        android:layout_toStartOf="@+id/buttonMenos" />

    <TextView
        android:id="@+id/textViewDescItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewValorItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/textViewDescItem"
        android:layout_alignParentStart="true" />
</RelativeLayout>